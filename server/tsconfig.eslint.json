{
  // Top Level
  "include": ["src/**/*", ".eslintrc.js"],
  "extends": "./tsconfig.base.json",

  "compilerOptions": {
    // Modules
    "types": ["@types/node"],

    /* Language and Environment */
    "target": "ES2022",

    // Emit
    "noEmit": true,

    // JavaScript Support
    "allowJs": true
  }
}
