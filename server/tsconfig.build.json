{
  // Top Level
  "include": ["src/**/*"],
  "exclude": [
    "src/types",
    "src/**/__tests__",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.testUtils.ts",
    "src/**/tests"
  ],
  "extends": "./tsconfig.base.json",

  "compilerOptions": {
    /* Modules */
    "module": "commonjs",

    /* Emit */
    "noEmitOnError": true,
    "outDir": "build",

    /* Interop Constraints */
    "forceConsistentCasingInFileNames": true
  }
}
