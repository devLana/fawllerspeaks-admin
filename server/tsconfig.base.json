{
  "compilerOptions": {
    // Modules
    "module": "node16",
    "baseUrl": "src",
    "paths": {
      "@server": ["index"],
      "@controllers/*": ["controllers/*"],
      "@events/*": ["events/*"],
      "@features/*": ["features/*"],
      "@lib/*": ["lib/*"],
      "@middleware/*": ["middleware/*"],
      "@schema/*": ["schema/*"],
      "@types": ["types"],
      "@resolverTypes": ["types/resolverTypes"],
      "@utils/*": ["utils/app/*"],
      "@tests/*": ["utils/tests/*"]
    },

    // Language and Environment
    "target": "es2022",
    "lib": ["es2022"],

    // Interop Constraints
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    // Type Checking
    "allowUnreachableCode": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "removeComments": true,
    "strict": true,

    // Completeness
    "skipLibCheck": true
  }
}
