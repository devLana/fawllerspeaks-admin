{
  "compilerOptions": {
    /* Modules */
    "moduleResolution": "node",
    "baseUrl": "src",
    "paths": {
      "@server": ["index"],
      "@controllers": ["controllers"],
      "@events/*": ["events/*"],
      "@features/*": ["features/*"],
      "@lib/*": ["lib/*"],
      "@middleware": ["middleware"],
      "@schema": ["schema"],
      "@types": ["types"],
      "@resolverTypes": ["types/resolverTypes"],
      "@utils": ["utils"],
      "@tests": ["utils/tests"]
    },

    /* Language and Environment */
    "target": "ES2022",
    "lib": ["ES2022"],

    /* Interop Constraints */
    "esModuleInterop": true,

    /* Type Checking */
    "strict": true,

    /* Completeness */
    "skipLibCheck": true
  }
}
